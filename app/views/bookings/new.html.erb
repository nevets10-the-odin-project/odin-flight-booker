<h1>Booking</h1>
<h2>Flight Information</h2>
<div>
    <p>Departure Time: <%= @flight.start %></p>
    <p>Flight ID: <%= @flight.id %></p>
    <p>Departing Airport: <%= @flight.departure_airport.code %></p>
    <p>Arriving Airport: <%= @flight.arriving_airport.code %></p>
</div>
<br>
<%= form_with model: @booking, url: 'create' do |f| %>
    <%= f.hidden_field :flight_id, value: @flight.id %>
    <%= f.label "Passenger Info" %>
    <%= f.fields_for :passengers, @booking.passengers do |passenger_form| %>
        <br>
        <%= passenger_form.label :name %>
        <%= passenger_form.text_field :name %>
        <br>
        <%= passenger_form.label :email %>
        <%= passenger_form.email_field :email %>
    <br>
    <% end %>
    <%= f.submit %>
<% end %>